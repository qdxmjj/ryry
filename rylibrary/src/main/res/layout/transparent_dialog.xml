<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/randus_white_bg_"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="— 温馨提示 —"
            android:textColor="@color/c24"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:lineSpacingExtra="4dp"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="      未进行车辆认证不会影响其它功能的正常使用，免费认证后可享全部换胎补胎服务"
            android:textColor="@color/c7"
            android:textSize="12sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/pop_close"
        android:layout_width="20dp"
        android:padding="3dp"
        android:layout_marginTop="170dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="20dp"
        android:src="@mipmap/ic_cancel_popup"/>

    <com.ruyiruyi.rylibrary.utils.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_logo_login"
        app:roundHeight="25dp"
        app:roundWidth="25dp"/>

</FrameLayout>