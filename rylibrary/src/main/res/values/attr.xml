<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="custom_banner">
        <attr name="indicatorGravity" format="enum">
            <enum name="LEFT" value="1" />
            <enum name="RIGHT" value="2" />
            <enum name="CENTER" value="3" />
        </attr>
        <attr name="indicatorStyle" format="enum">
            <enum name="NONE" value="1" />
            <enum name="NUMBER" value="2" />
            <enum name="ORDINARY" value="3" />
        </attr>
        <attr name="indicatorSelectRes" format="reference" />
        <attr name="indicatorUnSelectRes" format="reference" />
        <attr name="indicatorInterval" format="dimension" />
    </declare-styleable>

    <declare-styleable name="WheelView">
        <attr name="itemVisibleNum" format="integer"/>

        <attr name="textColorOuter" format="color" />
        <attr name="textSizeOuter" format="dimension" />
        <attr name="textColorCenter" format="color" />
        <attr name="textSizeCenter" format="dimension" />

        <attr name="lineColor" format="color" />

        <attr name="isLoop" format="boolean"/>
        <attr name="lineSpaceingDimens" format="dimension"/>

        <attr name="wheelGravity" format="enum" >
            <enum name="left" value="234"/>
            <enum name="center" value="354"/>
            <enum name="right" value="894"/>
        </attr>

    </declare-styleable>

    <!--首页弹窗进度条-->
    <declare-styleable name="ProgressLayout">
        <attr name="progressLoadingStateBackgroundColor" format="color" />
        <attr name="progressEmptyStateBackgroundColor" format="color" />
        <attr name="progressErrorStateBackgroundColor" format="color" />
    </declare-styleable>

</resources>
