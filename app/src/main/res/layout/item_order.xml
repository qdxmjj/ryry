<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/order_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/order_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/ic_launcher"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/order_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/c7"
                    android:text="轮胎标题轮胎标题轮胎标题轮胎标题"/>
                <TextView
                    android:id="@+id/order_no_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c5"
                    android:textSize="14sp"
                    android:layout_marginTop="5sp"
                    android:text="订单编号：123456789"/>
                <TextView
                    android:id="@+id/order_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c5"
                    android:textSize="14sp"
                    android:layout_marginTop="5sp"
                    android:text="下单时间：123456789"/>
                <TextView
                    android:id="@+id/order_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥8888.22"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"/>

            </LinearLayout>
            <TextView
                android:id="@+id/order_type_button"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="@drawable/bg_button"
                android:layout_gravity="bottom|right"/>
        </FrameLayout>
    </LinearLayout>


</LinearLayout>
