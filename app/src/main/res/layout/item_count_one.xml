<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:id="@+id/car_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp">
        <TextView
            android:id="@+id/title_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用畅行无忧数量"
            android:layout_gravity="left|center_vertical"
            android:textSize="15sp"
            android:textColor="@color/c6"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:gravity="center_vertical">
            <com.ruyiruyi.rylibrary.cell.AmountView
                android:id="@+id/cxwy_amount_view"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                app:btnTextSize="14sp"
                app:btnWidth="36dp"
                app:tvWidth="50dp"/>
        </LinearLayout>
    </FrameLayout>
    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c2"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需要补差得金额"
            android:layout_gravity="left|center_vertical"
            android:textSize="15sp"
            android:textColor="@color/c6"/>

        <TextView
            android:id="@+id/bucha_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:textColor="@color/c20"
            android:text="￥56.00"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c2"/>

</LinearLayout>
