<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/randus_white_bg_"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_city_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="确定"
            android:textColor="@color/theme_primary"
            android:textSize="12sp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <com.ruyiruyi.rylibrary.ui.cell.WheelView
            android:id="@+id/whview_city_sheng"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            app:isLoop="true"
            app:itemVisibleNum="5"
            app:lineColor="@color/theme_primary"
            app:lineSpaceingDimens="10dp"
            app:textColorCenter="@color/theme_primary"
            app:textColorOuter="@color/c3"
            app:textSizeCenter="12dp"
            app:textSizeOuter="10dp"/>

        <com.ruyiruyi.rylibrary.ui.cell.WheelView
            android:id="@+id/whview_city_shi"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:isLoop="true"
            app:itemVisibleNum="5"
            app:lineColor="@color/theme_primary"
            app:lineSpaceingDimens="10dp"
            app:textColorCenter="@color/theme_primary"
            app:textColorOuter="@color/c3"
            app:textSizeCenter="12dp"
            app:textSizeOuter="10dp"/>

        <com.ruyiruyi.rylibrary.ui.cell.WheelView
            android:id="@+id/whview_city_xian"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            app:isLoop="true"
            app:itemVisibleNum="5"
            app:lineColor="@color/theme_primary"
            app:lineSpaceingDimens="10dp"
            app:textColorCenter="@color/theme_primary"
            app:textColorOuter="@color/c3"
            app:textSizeCenter="12dp"
            app:textSizeOuter="10dp"/>

    </LinearLayout>

</LinearLayout>
