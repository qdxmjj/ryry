<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c1"
    tools:context="com.ruyiruyi.ruyiruyi.ui.activity.LoginActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:gravity="center_vertical"
        android:layout_marginTop="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"/>

        <EditText
            android:id="@+id/phone_number_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="请输入您的手机号"
            android:textColorHint="@color/c4"
            android:textSize="15sp"
            android:inputType="phone"
            android:maxLength="11"
            android:background="@drawable/edit_bg_select"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_password"/>
        <FrameLayout
            android:id="@+id/code_login"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/code_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="请输入验证码"
                android:textColorHint="@color/c4"
                android:textSize="15sp"
                android:inputType="number"
                android:background="@drawable/edit_bg_select"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                />
            <TextView
                android:id="@+id/get_code_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_gravity="right"
                android:background="@drawable/login_button"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/password_login_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/password_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="请输入密码"
                android:textColorHint="@color/c4"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:background="@drawable/edit_bg_select"
                android:textCursorDrawable="@drawable/edit_cursor_color"

                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                />
            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码?"
                android:textSize="13sp"
                android:layout_gravity="center_vertical|right"
                android:textColor="@color/theme_primary"/>
        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/agreement_view_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textColor="@color/c6"
        android:text="未注册小马驾驾账号的手机号，登录时将自动完成注册，且代表您已阅读并同意《小马驾驾用户协议》"
        />

    <TextView
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:background="@drawable/login_button"
        android:paddingTop="7dp"
        android:gravity="center"
        android:paddingBottom="7dp"/>

    <TextView
        android:id="@+id/login_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证码登录>"
        android:textSize="15dp"
        android:textColor="@color/theme_primary"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/three_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三方登录"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"/>
        <View
            android:id="@+id/left_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/c4"
            android:layout_toLeftOf="@+id/three_login"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
        <View
            android:id="@+id/right_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/c4"
            android:layout_toRightOf="@+id/three_login"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/weixin_login_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_weixin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:layout_marginTop="3dp"
            android:textSize="14sp"
            />

    </LinearLayout>


</LinearLayout>
