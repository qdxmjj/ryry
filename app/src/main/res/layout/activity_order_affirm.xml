<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruyiruyi.ruyiruyi.ui.activity.OrderAffirmActivity">

    <com.ruyiruyi.rylibrary.cell.ActionBar
        android:id="@+id/my_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">
            <FrameLayout
            android:id="@+id/car_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人"
                    android:layout_gravity="left"
                    android:textSize="15sp"
                    android:textColor="@color/c6"/>

                <TextView
                    android:id="@+id/user_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="有人爱吃手手"
                    android:textColor="@color/c5"
                    android:textSize="15sp" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话"
                    android:layout_gravity="left"
                    android:textSize="15sp"
                    android:textColor="@color/c6"/>
                <TextView
                    android:id="@+id/user_phone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13589342270"
                    android:layout_gravity="right"
                    android:textSize="15sp"
                    android:textColor="@color/c5"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车牌号码"
                    android:layout_gravity="left"
                    android:textSize="15sp"
                    android:textColor="@color/c6"/>
                <TextView
                    android:id="@+id/car_number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="鲁B15616"
                    android:layout_gravity="right"
                    android:textSize="15sp"
                    android:textColor="@color/c5"/>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/c2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/tire_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tire_name_text_oder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="如驿如意夏季胎 205/55R16 适用于卡罗拉麦克斯宝来马良东岳寺死于抓地强 耐高温 正品"
                        android:textColor="@color/c7"
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"
                        android:maxLines="3"/>
                   <FrameLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="25dp">
                       <TextView
                           android:id="@+id/tire_price_text_order"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="￥888.00"
                           android:layout_marginLeft="5dp"
                           android:textColor="@color/theme_primary"
                           android:textSize="19sp"/>
                       <TextView
                           android:id="@+id/tire_count_order"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="×4"
                           android:textSize="19sp"
                           android:layout_marginRight="10dp"
                           android:layout_gravity="right|center_vertical"/>
                   </FrameLayout>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/c2"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_plus"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="畅行无忧"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/cxwy_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="×4"
                    android:textSize="19sp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center_vertical"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:background="#ffffff">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="轮胎金额"
                    android:layout_gravity="left"
                    android:textSize="15sp"
                    android:textColor="@color/c6"/>
                <TextView
                    android:id="@+id/tire_all_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥888"
                    android:layout_gravity="right"
                    android:textSize="15sp"
                    android:textColor="@color/theme_primary"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="畅行无忧"
                    android:layout_gravity="left"
                    android:textSize="15sp"
                    android:textColor="@color/c6"/>
                <TextView
                    android:id="@+id/cxwy_all_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥888"
                    android:layout_gravity="right"
                    android:textSize="15sp"
                    android:textColor="@color/theme_primary"/>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/c2"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="合计："/>
                    <TextView
                        android:id="@+id/all_price_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="3555"
                        android:textColor="@color/theme_primary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"
                        android:text="元"/>
                    <TextView
                        android:id="@+id/tire_buy_button"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:text="确认购买"
                        android:textSize="18sp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:background="@color/theme_primary"/>
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>
