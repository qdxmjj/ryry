<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.ruyiruyi.rylibrary.ui.viewpager.CustomBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:indicatorStyle="ORDINARY"
        app:indicatorGravity="CENTER"
        app:indicatorSelectRes="@drawable/shape_point_select"
        app:indicatorUnSelectRes="@drawable/shape_point_unselect"
        app:indicatorInterval="5dp"
        />

    <LinearLayout
        android:id="@+id/city_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_city"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="青岛市"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/car_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_bg_car"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="160dp">

        <ImageView
            android:id="@+id/home_car_image"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_add"
            android:layout_marginLeft="30dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp">
            <TextView
                android:id="@+id/home_car_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加我的宝驹"
                android:textColor="@color/c7"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/home_car_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请好友绑定车辆可免费洗车"
                android:textSize="13sp"
                android:textColor="@color/c5"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
