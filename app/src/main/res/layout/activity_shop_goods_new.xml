<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruyiruyi.ruyiruyi.ui.activity.ShopGoodsNewActivity">

    <com.ruyiruyi.rylibrary.cell.ActionBar
        android:id="@+id/my_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/shop_item_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/theme_primary"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/store_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_launcher"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="30dp"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/store_name_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="青岛市春阳路天安数码城一号门店"
                                android:textSize="17dp"
                                android:textColor="@color/white"
                                />
                        </FrameLayout>


                        <com.ruyiruyi.rylibrary.cell.flowlayout.TagFlowLayout
                            android:id="@+id/store_tag_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_go_bai"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="10dp"/>
                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:id="@+id/qcby_layout"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="汽车保养"
                        android:textColor="@color/c6"
                        android:textSize="16sp"
                        android:layout_gravity="center"/>
                    <View
                        android:id="@+id/qcby_view"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:visibility="gone"
                        android:layout_gravity="bottom"
                        android:background="@color/theme_primary"/>
                    <TextView
                        android:id="@+id/qcby_count_text"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/ic_mark"
                        android:gravity="center"
                        android:textSize="9sp"
                        android:textColor="#ffffff"
                        android:visibility="gone"
                        android:layout_gravity="right"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:text="11"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/mrqx_layout"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="美容清洗"
                        android:textColor="@color/c6"
                        android:textSize="16sp"
                        android:layout_gravity="center"/>
                    <View
                        android:id="@+id/mrqx_view"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="bottom"
                        android:visibility="gone"
                        android:background="@color/theme_primary"/>
                    <TextView
                        android:id="@+id/mrqx_count_text"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/ic_mark"
                        android:gravity="center"
                        android:textSize="9sp"
                        android:textColor="#ffffff"
                        android:layout_gravity="right"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:visibility="gone"
                        android:text="11"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/azgz_layout"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="安装改装"
                        android:textColor="@color/c6"
                        android:textSize="16sp"
                        android:layout_gravity="center"/>
                    <View
                        android:id="@+id/azgz_view"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="bottom"
                        android:visibility="gone"
                        android:background="@color/theme_primary"/>
                    <TextView
                        android:id="@+id/azgz_count_text"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/ic_mark"
                        android:gravity="center"
                        android:textSize="9sp"
                        android:textColor="#ffffff"
                        android:layout_gravity="right"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:visibility="gone"
                        android:text="11"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/ltfw_layout"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="轮胎服务"
                        android:textColor="@color/c6"
                        android:textSize="16sp"
                        android:layout_gravity="center"/>
                    <View
                        android:id="@+id/ltfw_view"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="bottom"
                        android:visibility="gone"
                        android:background="@color/theme_primary"/>
                    <TextView
                        android:id="@+id/ltfw_count_text"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/ic_mark"
                        android:gravity="center"
                        android:textSize="9sp"
                        android:textColor="#ffffff"
                        android:layout_gravity="right"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:visibility="gone"
                        android:text="11"/>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/c1">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/c1"
                    android:layout_weight="1">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/store_class_listview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/c1"
                    android:layout_weight="3">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/store_goods_listview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="4dp"
                        android:background="@color/c1"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="#ffffff"
            android:layout_height="40dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="合计："/>
                <TextView
                    android:id="@+id/all_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="3555"
                    android:textColor="@color/theme_primary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:text="元"/>
                <TextView
                    android:id="@+id/goods_buy_button"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="确认购买"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:background="@color/theme_primary"/>
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/shop_car_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:visibility="gone"
            android:layout_marginBottom="40dp"
            android:background="#a6000000">
            <FrameLayout
                android:id="@+id/shop_car_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#ffffff">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <LinearLayout
                        android:id="@+id/delete_car_shop_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical|right">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_delete_goods"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="清除购物车"
                            />
                    </LinearLayout>
                </FrameLayout>
               <android.support.v7.widget.RecyclerView
                   android:id="@+id/goods_car_listview"
                   android:layout_width="match_parent"
                   android:layout_marginTop="40dp"
                   android:layout_height="wrap_content"/>
            </FrameLayout>

        </FrameLayout>
        <ImageView
            android:id="@+id/shop_car_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_car"/>
        <TextView
            android:id="@+id/goods_count_text"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_mark"
            android:gravity="center"
            android:textSize="9sp"
            android:textColor="#ffffff"
            android:layout_gravity="bottom"
            android:layout_marginLeft="59dp"
            android:layout_marginBottom="35dp"
            android:text="11"/>
    </FrameLayout>

</LinearLayout>
