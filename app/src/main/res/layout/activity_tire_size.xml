<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.ruyiruyi.ruyiruyi.ui.activity.TireSizeActivity">
    <com.ruyiruyi.rylibrary.cell.ActionBar
        android:id="@+id/my_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="55dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_tire_size"/>
            <TextView
                android:id="@+id/weizhi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginLeft="30dp"
                android:text="前轮尺寸"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <com.ruyiruyi.rylibrary.ui.cell.WheelView
                    android:id="@+id/width_wheel_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:textColorCenter="@color/theme_primary"
                    app:lineSpaceingDimens="15dp"
                    app:itemVisibleNum="3"
                    app:lineColor="@color/theme_primary"
                    app:textSizeCenter="20dp"
                    app:textSizeOuter="16dp"
                    app:isLoop="false"
                    app:textColorOuter="@android:color/darker_gray"
                    android:layout_marginLeft="30dp"
                    />
                <com.ruyiruyi.rylibrary.ui.cell.WheelView
                    android:id="@+id/radiowheel_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:textColorCenter="@color/theme_primary"
                    app:lineSpaceingDimens="15dp"
                    app:itemVisibleNum="3"
                    app:lineColor="@color/theme_primary"
                    app:textSizeCenter="20dp"
                    app:textSizeOuter="16dp"
                    app:isLoop="false"
                    app:textColorOuter="@android:color/darker_gray"
                    android:layout_marginLeft="30dp"
                    />

                <com.ruyiruyi.rylibrary.ui.cell.WheelView
                    android:id="@+id/diameter_wheel_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:textColorCenter="@color/theme_primary"
                    app:lineSpaceingDimens="15dp"
                    app:itemVisibleNum="3"
                    app:lineColor="@color/theme_primary"
                    app:textSizeCenter="20dp"
                    app:textSizeOuter="16dp"
                    app:isLoop="false"
                    app:textColorOuter="@android:color/darker_gray"
                    android:layout_marginLeft="30dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/save_tire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_gravity="bottom"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_button"/>
    </FrameLayout>


</LinearLayout>
