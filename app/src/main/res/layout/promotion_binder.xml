<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_people" />

        <TextView
            android:id="@+id/tv_code_promotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="D5FFS"
            android:textColor="@color/c7"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/promotion_share"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:text="立即分享"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/promotion_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="20dp"
            android:text="推广奖励规则推广奖励规则推广奖励规则推广奖励规则推广奖励规则推广奖励规则"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/promotion_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="20dp"
            android:text="推广奖励规则推广奖励规则推广奖励规则推广奖励规则推广奖励规则推广奖励规则"
            android:textSize="14sp" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFD030"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/tv_mid_xian"
            android:gravity="center"
            android:textColor="@color/c7" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#FFD030"
            android:gravity="center"
            android:text="已获得邀请奖励"
            android:textStyle="bold"
            android:textColor="@color/c7" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/tv_mid_xian"
            android:gravity="center"
            android:textColor="@color/c7" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FFD030" />

</LinearLayout>
