<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.ruyiruyi.ruyiruyi.ui.activity.EvaluateActivity">

    <com.ruyiruyi.rylibrary.cell.ActionBar
        android:id="@+id/my_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp">
        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/ic_launcher"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="服务满意程度"/>
            <com.ruyiruyi.rylibrary.cell.NewRatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:starCount="5"
                android:layout_marginTop="10dp"
                app:starEmpty="@drawable/evaluate_star_nochoose"
                app:starFill="@drawable/evaluate_star_choose"
                app:starImageSize="24dp"
                app:starStep="1"
                app:stepSize="Full"/>

        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <com.ruyiruyi.rylibrary.cell.CustomEditText
            android:id="@+id/evaluate_edittext"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:enabled="true"
            android:gravity="top"
            android:textSize="15sp"
            android:textColor="@color/c7"
            android:background="@null"

            android:hint="快点来进行评价吧"
            android:inputType="textMultiLine"
            android:maxLength="200"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="10dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/evaluate_phote_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>
