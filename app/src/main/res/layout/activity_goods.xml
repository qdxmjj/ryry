<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruyiruyi.ruyiruyi.ui.activity.GoodsActivity">

    <com.ruyiruyi.rylibrary.cell.ActionBar
        android:id="@+id/my_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/goods_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="#ffffff"
            android:layout_height="40dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="合计："/>
                <TextView
                    android:id="@+id/all_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="3555"
                    android:textColor="@color/theme_primary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:text="元"/>
                <TextView
                    android:id="@+id/tire_buy_button"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="确定"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:background="@color/theme_primary"/>
            </LinearLayout>

        </FrameLayout>
    </FrameLayout>

</LinearLayout>
