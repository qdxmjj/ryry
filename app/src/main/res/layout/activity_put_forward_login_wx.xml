<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <com.ruyiruyi.rylibrary.cell.ActionBar
        android:id="@+id/acbars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <com.ruyiruyi.ruyiruyi.utils.CircleImageView
                android:id="@+id/civ_weixin"
                android:layout_gravity="center_horizontal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/putforward_marginTop"
                android:scaleType="centerCrop"
                app:roundHeight="30dp"
                app:roundWidth="30dp"/>

            <!--昵称-->
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/putforward_marginTop"
                android:text=""
                android:layout_gravity="center_horizontal"
                android:textColor="@color/c7"
                android:textSize="@dimen/putforward_textsize"/>

            <!--姓名-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/putforward_marginTop"
                android:text="姓名"
                android:textColor="@color/c7"
                android:textSize="@dimen/putforward_textsize"/>

            <EditText
                android:id="@+id/et_wxrealname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/putforward_marginMid"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入该微信号持有人的真实姓名"
                android:maxLength="5"
                android:maxLines="1"
                android:textColor="@color/c6"
                android:textColorHint="@color/c4"
                android:textSize="@dimen/putforward_smalltextsize"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/putforward_marginBottom"
                android:background="@color/c1"/>

            <!--提示信息-->
            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/putforward_marginTop"
                android:text="请核实并填写提现微信号的实名认证人姓名信息，填写错误会导致提现失败。"
                android:textColor="@color/c6"
                android:textSize="@dimen/putforward_smalltextsize"/>

            <!--提交-->
            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/login_button"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/c12"
                android:textSize="@dimen/putforward_textsize"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>