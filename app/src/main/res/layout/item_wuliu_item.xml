<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/time_tian_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01-03"
            android:textSize="13sp"
            android:textColor="@color/c6"/>
        <TextView
            android:id="@+id/time_shi_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20:15"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:textColor="@color/c6"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:id="@+id/yuan"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/yuan"/>

        <View
            android:id="@+id/shang_xian"
            android:layout_width="1dp"
            android:layout_alignBottom="@+id/yuan"
            android:layout_centerHorizontal="true"
            android:background="@color/c2"
            android:layout_marginBottom="4dp"
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/xia_xian"
            android:layout_width="1dp"
            android:layout_alignTop="@+id/yuan"
            android:background="@color/c2"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/wuliu_content_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="11sp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="@color/c5"/>
</LinearLayout>