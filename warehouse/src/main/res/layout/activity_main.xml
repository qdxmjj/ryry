<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/ic_yuan_shou"
       android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/user_touxiang_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_touxiang"
            />
        <TextView
            android:id="@+id/user_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如驿如意仓库管理系统"
            android:layout_marginTop="7dp"
            android:textColor="@color/c7"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="190dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/caigou_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.72"
                android:scaleType="fitXY"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_caigou"/>
            <ImageView
                android:id="@+id/caigou_jilu_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_caigoujilu"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/diaobo_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:scaleType="fitXY"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_diaobo"/>
            <ImageView
                android:id="@+id/diaobo_jilu_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_diaobojilu"/>
            <ImageView
                android:id="@+id/diaobo_shenqing_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_shenqing"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/kucun_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:scaleType="fitXY"
                android:src="@drawable/ic_kucun"/>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>
