<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="3"
    android:layout_height="match_parent">

    <com.ruyiruyi.rylibrary.ui.cell.WheelView
        android:id="@+id/whview_city_sheng"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:isLoop="true"
        android:layout_weight="1"
        app:itemVisibleNum="5"
        android:layout_marginLeft="30dp"
        app:lineColor="@color/theme_primary"
        app:lineSpaceingDimens="10dp"
        app:textColorCenter="@color/theme_primary"
        app:textColorOuter="@color/c3"
        app:textSizeCenter="12dp"
        app:textSizeOuter="10dp" />

    <com.ruyiruyi.rylibrary.ui.cell.WheelView
        android:id="@+id/whview_city_shi"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:isLoop="true"
        app:itemVisibleNum="5"
        app:lineColor="@color/theme_primary"
        app:lineSpaceingDimens="10dp"
        app:textColorCenter="@color/theme_primary"
        app:textColorOuter="@color/c3"
        app:textSizeCenter="12dp"
        app:textSizeOuter="10dp" />

    <com.ruyiruyi.rylibrary.ui.cell.WheelView
        android:id="@+id/whview_city_xian"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:isLoop="true"
        app:itemVisibleNum="5"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
        app:lineColor="@color/theme_primary"
        app:lineSpaceingDimens="10dp"
        app:textColorCenter="@color/theme_primary"
        app:textColorOuter="@color/c3"
        app:textSizeCenter="12dp"
        app:textSizeOuter="10dp" />

</LinearLayout>
