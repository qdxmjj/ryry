<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.ruyiruyi.merchant.ui.activity.MyGoodsActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/c1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <FrameLayout
        android:id="@+id/order_item_fl"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <com.ruyiruyi.merchant.utils.CircleImageView
            android:id="@+id/img_order"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_head"
            attr:roundHeight="3dp"
            attr:roundWidth="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ordertitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="撒大声地撒多所多撒多撒多sad撒多ddddda 的ad啊撒多"
                android:textColor="@color/c7"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号:"
                    android:textColor="@color/c6"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_orderbianhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="111"
                    android:textColor="@color/c6"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="¥"
                    android:textColor="@color/c6"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_orderprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="66"
                    android:textColor="@color/c6"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_quan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="1dp"
                    android:background="@drawable/register_theam_button"
                    android:paddingLeft="3dp"
                    android:paddingRight="2dp"
                    android:text="券"
                    android:textColor="@color/theme_primary"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_orderstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_code_button"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:text="其他状态"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp" />
</LinearLayout>
