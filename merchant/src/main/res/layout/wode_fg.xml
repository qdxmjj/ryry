<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ruyiruyi.merchant.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/img_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_ground" />

            <ImageView
                android:id="@+id/img_user_top"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_user_top"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="用户名"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_mid"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/rl_top"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-30dp"
            android:background="@drawable/ic_box"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_mid_wddd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_dingdan"
                android:gravity="center"
                android:paddingTop="15dp"
                android:textColor="@color/c7"
                android:text="我的订单"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_mid_gldp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_shop"
                android:gravity="center"
                android:textColor="@color/c7"
                android:paddingTop="15dp"
                android:text="管理店铺"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/ll_mid"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/c2" />


        <RelativeLayout
            android:id="@+id/rl_wdfw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ll_mid"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/img_wdfw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_service" />

            <TextView
                android:id="@+id/tv_wdfw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_wdfw"
                android:text="我的服务"
                android:textColor="@color/c6"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_jiantou" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_wdfw"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/c2" />

        <RelativeLayout
            android:id="@+id/rl_wdsp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rl_wdfw"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/img_wdsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_thing" />

            <TextView
                android:id="@+id/tv_wdsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/c6"
                android:layout_toRightOf="@+id/img_wdsp"
                android:text="我的商品"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_jiantou" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_wdsp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/c2" />

        <RelativeLayout
            android:id="@+id/rl_tgjl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rl_wdsp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/img_tgjl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_gift" />

            <TextView
                android:id="@+id/tv_tgjl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/c6"
                android:layout_toRightOf="@+id/img_tgjl"
                android:text="推广奖励"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_jiantou" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_tgjl"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/c2" />

        <RelativeLayout
            android:id="@+id/rl_dzyhs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rl_tgjl"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/img_dzyhs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_word" />

            <TextView
                android:id="@+id/tv_dzyhs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/c6"
                android:layout_toRightOf="@+id/img_dzyhs"
                android:text="店主有话说"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_jiantou" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_dzyhs"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/c2" />


    </RelativeLayout>
</ScrollView>