<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ruyiruyi.merchant.ui.activity.StartAppActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/c1" />

    <ScrollView
        android:id="@+id/scview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="65dp"
        android:layout_marginTop="6dp">

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.ruyiruyi.merchant.ui.activity.RegisterActivity">


            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/c1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:id="@+id/et_shopname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edit_background_noline"
                    android:hint="请输入门店名称"
                    android:maxLength="18"
                    android:paddingLeft="100dp"
                    android:singleLine="true"
                    android:textColorHint="@color/c5"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/et_shopname"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="门店名称"
                    android:textColor="@color/c7"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_shopcategory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edit_background_noline"
                    android:gravity="center_vertical"
                    android:paddingLeft="100dp"
                    android:text="请选择您的门店类别"
                    android:textColor="@color/c5"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_shopcategory"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="门店类别"
                    android:textColor="@color/c7"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:id="@+id/et_shopphone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edit_background_noline"
                    android:hint="请输入您店里的电话"
                    android:inputType="number"
                    android:maxLength="18"
                    android:paddingLeft="100dp"
                    android:singleLine="true"
                    android:textColorHint="@color/c5"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/et_shopphone"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="联系电话"
                    android:textColor="@color/c7"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_shoptime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edit_background_noline"
                    android:gravity="center_vertical"
                    android:paddingLeft="100dp"
                    android:text="请选择您的营业时间"
                    android:textColor="@color/c5"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_shoptime"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="营业时间"
                    android:textColor="@color/c7"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_shopcity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edit_background_noline"
                    android:gravity="center_vertical"
                    android:paddingLeft="100dp"
                    android:text="     省     市     区"
                    android:textColor="@color/c6"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_shopcity"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="所在城市"
                    android:textColor="@color/c7"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:id="@+id/et_shoplocation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edit_background_noline"
                    android:hint="请补充您的详细地址 街道、门牌号等"
                    android:paddingLeft="100dp"
                    android:singleLine="true"
                    android:textColorHint="@color/c5"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/et_shoplocation"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="门店位置"
                    android:textColor="@color/c7"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_shoppoint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edit_background_noline"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:paddingLeft="130dp"
                    android:text="点击自动定位"
                    android:textColor="@color/c5"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_shoppoint"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100dp"
                    android:src="@drawable/ic_position" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_shoppoint"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="门店定位"
                    android:textColor="@color/c7"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="10dp"
                android:background="@color/c1" />

            <LinearLayout
                android:id="@+id/ll_xiangmus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_hezuo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="希望合作项目"
                    android:textColor="@color/c7"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="10dp"
                android:background="@color/c1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_mdpic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="上传门店照片"
                    android:textColor="@color/c7"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_mdpic"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:maxHeight="30pt"
                    android:maxWidth="30pt"
                    android:src="@drawable/ic_picture" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@+id/tv_mdpic"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="3">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_mdpic_a"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_bg_dark" />

                        <ImageView
                            android:id="@+id/img_mdpic_a_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|top"
                            android:src="@drawable/ic_delete"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img_mdpic_a_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_add" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_mdpic_b"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_bg_dark" />

                        <ImageView
                            android:id="@+id/img_mdpic_b_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|top"
                            android:src="@drawable/ic_delete"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img_mdpic_b_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_add" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_mdpic_c"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_bg_dark" />

                        <ImageView
                            android:id="@+id/img_mdpic_c_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|top"
                            android:src="@drawable/ic_delete"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img_mdpic_c_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_add" />
                    </FrameLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="10dp"
                android:background="@color/c1" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/login_code_button"
            android:gravity="center"
            android:text="保存"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>
</FrameLayout>
