<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/dianpu_rlv_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baoyang" />

        <LinearLayout
            android:id="@+id/dianpu_ll_right"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dianpu_tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="bottom|right"
                    android:text="+800.00"
                    android:textColor="@color/c7"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tv_quan"
                    android:layout_width="wrap_content"
                    android:text="券"
                    android:visibility="gone"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_gravity="bottom|right"
                    android:textSize="12sp"
                    android:textColor="@color/theme_primary"
                    android:background="@drawable/register_theam_button"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/dianpu_tv_state"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="已完成"
                android:textColor="@color/c6"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dianpu_ll_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"
            android:layout_toLeftOf="@+id/dianpu_ll_right"
            android:layout_toRightOf="@+id/dianpu_rlv_img"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/dianpu_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="汽车保养"
                android:textColor="@color/c7"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dianpu_tv_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="07-08"
                android:textColor="@color/c6"
                android:textSize="10sp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/c2" />
    </RelativeLayout>
</LinearLayout>
