<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              tools:context="com.ruyiruyi.merchant.ui.activity.MyGoodsActivity">

    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/c1"/>

    <LinearLayout
        android:id="@+id/ll_shoe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/shoe_img"
            style="@style/public_oneitem_image"
            android:src="@drawable/ic_order_luntai"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shoe_name"
                style="@style/public_oneitem_title"
                android:text="ROADCRUZA/运动操控/255/45R17/102W/W"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/public_oneitem_content"
                    android:text="服务项目:"/>

                <TextView
                    android:id="@+id/shoe_type"
                    style="@style/public_oneitem_content"
                    android:layout_marginLeft="5dp"
                    android:text="首次更换"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/public_oneitem_content"
                    android:text="更换位置:"/>

                <TextView
                    android:id="@+id/shoe_location"
                    style="@style/public_oneitem_content"
                    android:layout_marginLeft="5dp"
                    android:text="前胎"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/public_oneitem_content"
                    android:text="更换数量:"/>

                <TextView
                    android:id="@+id/shoe_amount"
                    style="@style/public_oneitem_content"
                    android:layout_marginLeft="5dp"
                    android:text="2"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/c1"/>
</LinearLayout>
