<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.ruyiruyi.merchant.ui.activity.RegisterActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/theme_primary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:onClick="registerclick"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tv_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="门店注册"
                android:textColor="#ffffff"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/et_person"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_background_noline"
                android:hint="请输入您名字"
                android:paddingLeft="100dp"
                android:textColor="@color/c5"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_person"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="申请人"
                android:textColor="@color/c7"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_background_noline"
                android:hint="请输入您的手机号"
                android:paddingLeft="100dp"
                android:textColor="@color/c5"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_phone"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="手机号"
                android:textColor="@color/c7"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_getcode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/login_code_button"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="获取验证码"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_background_noline"
                android:hint="请输入验证码"
                android:paddingLeft="100dp"
                android:textColor="@color/c5"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_code"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="验证码"
                android:textColor="@color/c7"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/et_pass_a"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_background_noline"
                android:hint="请设置您的登录密码"
                android:paddingLeft="100dp"
                android:textColor="@color/c5"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_pass_a"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="登录密码"
                android:textColor="@color/c7"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/et_pass_b"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_background_noline"
                android:hint="请再次确认您的登录密码"
                android:paddingLeft="100dp"
                android:textColor="@color/c5"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_pass_b"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="确认密码"
                android:textColor="@color/c7"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="10dp"
            android:background="@color/c1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/et_shopname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_background_noline"
                android:hint="请输入门店名称"
                android:paddingLeft="100dp"
                android:textColor="@color/c5"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_shopname"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="门店名称"
                android:textColor="@color/c7"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/et_shopcategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_background_noline"
                android:hint="预留Spinner门店类别选择"
                android:paddingLeft="100dp"
                android:textColor="@color/c5"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_shopcategory"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="门店类别"
                android:textColor="@color/c7"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/et_shopphone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_background_noline"
                android:hint="请输入您店里的电话"
                android:paddingLeft="100dp"
                android:textColor="@color/c5"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_shopphone"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="联系电话"
                android:textColor="@color/c7"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/et_shoptime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_background_noline"
                android:hint="预留Spinner时间选择"
                android:paddingLeft="100dp"
                android:textColor="@color/c5"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_shoptime"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="营业时间"
                android:textColor="@color/c7"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/et_shopcity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_background_noline"
                android:hint="预留Spinner省/市/区"
                android:paddingLeft="100dp"
                android:textColor="@color/c5"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_shopcity"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="所在城市"
                android:textColor="@color/c7"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/et_shoplocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_background_noline"
                android:hint="请补充您的详细地址 街道、门牌号等"
                android:paddingLeft="100dp"
                android:textColor="@color/c5"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_shoplocation"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="门店位置"
                android:textColor="@color/c7"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/et_shoppoint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edit_background_noline"
                android:hint="预留定位"
                android:paddingLeft="100dp"
                android:textColor="@color/c5"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_shoppoint"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="门店定位"
                android:textColor="@color/c7"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="10dp"
            android:background="@color/c1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_yyzz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="上传营业执照"
                android:textColor="@color/c7"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:maxHeight="30pt"
                android:maxWidth="30pt"
                android:src="@drawable/ic_picture" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/tv_yyzz"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/img_yyzz"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:background="@drawable/img_bg_dark"
                    android:layout_alignLeft="@+id/tv_yyzz"
                    android:layout_weight="1"
                    android:src="@drawable/ic_add" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/tv_yyzz"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/tv_yyzz"
                    android:layout_weight="1"
                     />
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="10dp"
            android:background="@color/c1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_mdpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="上传门店照片"
                android:textColor="@color/c7"
                android:textSize="15sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:maxHeight="30pt"
                android:maxWidth="30pt"
                android:src="@drawable/ic_picture" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/tv_mdpic"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/img_mdpic_a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/tv_mdpic"
                    android:background="@drawable/img_bg_dark"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:src="@drawable/ic_add" />

                <ImageView
                    android:id="@+id/img_mdpic_b"
                    android:layout_width="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/tv_mdpic"
                    android:layout_weight="1"
                    android:background="@drawable/img_bg_dark"
                    android:padding="20dp"
                    android:src="@drawable/ic_add" />

                <ImageView
                    android:id="@+id/img_mdpic_c"
                    android:layout_width="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/tv_mdpic"
                    android:layout_weight="1"
                    android:background="@drawable/img_bg_dark"
                    android:padding="20dp"
                    android:src="@drawable/ic_add" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="10dp"
            android:background="@color/c1" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_shou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="手持身份证照片"
                android:textColor="@color/c7"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:maxHeight="30pt"
                android:maxWidth="30pt"
                android:src="@drawable/ic_picture" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/tv_shou"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/img_shou_a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:background="@drawable/img_bg_dark"
                    android:layout_alignLeft="@+id/tv_yyzz"
                    android:layout_weight="1"
                    android:src="@drawable/ic_add" />

                <ImageView
                    android:id="@+id/img_shou_b"
                    android:layout_width="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/tv_yyzz"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:id="@+id/img_shou_c"
                    android:layout_width="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/tv_yyzz"
                    android:layout_weight="1"
                    />
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="10dp"
            android:background="@color/c1" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_hezuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="希望合作项目"
                android:textColor="@color/c7"
                android:textSize="15sp" />
            <LinearLayout
                android:id="@+id/ll_hezuo_a"
                android:layout_below="@+id/tv_hezuo"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_alignLeft="@+id/tv_hezuo"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_hezuo_b"
                android:layout_below="@+id/ll_hezuo_a"
                android:orientation="horizontal"
                android:layout_alignLeft="@+id/tv_hezuo"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="10dp"
            android:background="@color/c1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_sjapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="手机APP操作"
                android:textColor="@color/c7"
                android:textSize="15sp" />
            <LinearLayout
                android:id="@+id/ll_sjapp"
                android:layout_below="@+id/tv_sjapp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_alignLeft="@+id/tv_sjapp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </LinearLayout>
        </RelativeLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="提交即表示同意"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/c6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《小马驾驾用户协议》"
            android:textColor="@color/c27"
            android:layout_marginLeft="2dp"
            android:textSize="12sp" />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_save"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:text="保存"
        android:textColor="#ffffff"
        android:background="@drawable/login_code_button"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>
    </LinearLayout>
</ScrollView>