                        <Switch
                            android:id="@+id/tiaoma_switch_b_"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:checked="false" />
                    </FrameLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
