<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c1"
    android:orientation="vertical"
    tools:context="com.ruyiruyi.merchant.ui.activity.GoodsInfoActivity">

    <com.ruyiruyi.rylibrary.cell.ActionBar
        android:id="@+id/goodsinfo_acbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_tijiaosp"
        android:layout_below="@+id/goodsinfo_acbar"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="125dp"
                android:background="@drawable/randus_white_bg_"
                android:orientation="vertical"
                android:paddingBottom="100dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="100dp"
                    android:background="@drawable/textview_bottom_line"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:gravity="center_vertical|left"
                        android:text="商品名称"
                        android:textColor="@color/c7"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_goods_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="5"
                        android:background="@null"
                        android:hint="请在此输入商品名称"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:textColor="@color/c7"
                        android:textColorHint="@color/c6"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/textview_bottom_line"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:gravity="center_vertical|left"
                        android:text="单价"
                        android:textColor="@color/c7"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_goods_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="5"
                        android:background="@null"
                        android:hint="请在此输入商品单价"
                        android:inputType="number"
                        android:maxLength="9"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:textColor="@color/c6"
                        android:textColorHint="@color/c6"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/textview_bottom_line"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:gravity="center_vertical|left"
                        android:text="商品分类"
                        android:textColor="@color/c7"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_goods_type"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:text="请在此选择商品分类"
                        android:textColor="@color/c6"
                        android:textColorHint="@color/c6"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/textview_bottom_line"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:gravity="center_vertical|left"
                        android:text="库存"
                        android:textColor="@color/c7"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_goods_kucun"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="5"
                        android:background="@null"
                        android:hint="请在此输入商品库存"
                        android:inputType="number"
                        android:maxLength="9"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:textColor="@color/c6"
                        android:textColorHint="@color/c6"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/textview_bottom_line"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:gravity="center_vertical|left"
                        android:text="商品状态"
                        android:textColor="@color/c7"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_goods_status"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="5"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:text="出售中"
                        android:textColor="@color/c6"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_goodsimg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/circle"
                android:padding="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_shancghuantp" />

        </FrameLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_tijiaosp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/tv_jixuadd"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/login_code_button"
        android:gravity="center"
        android:text="提交商品"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_jixuadd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/register_theam_button"
        android:gravity="center"
        android:text="继续添加"
        android:textColor="@color/theme_primary"
        android:textSize="14sp" />

</RelativeLayout>
